# Database Configuration
MONGODB_URL=mongodb://localhost:27017
MONGODB_DATABASE=orion_nexus

# Redis Configuration (for Celery)
REDIS_URL=redis://localhost:6379/0

# Security Configuration
SECRET_KEY=your-secret-key-here-change-in-production
AES_SECRET_KEY=your-aes-secret-key-here-change-in-production
ACCESS_TOKEN_EXPIRE_MINUTES=30
ALGORITHM=HS256

# API Configuration
API_V1_STR=/api/v1
PROJECT_NAME=Orion Nexus
PROJECT_VERSION=1.0.0
DEBUG=True

# CORS Configuration
BACKEND_CORS_ORIGINS=["http://localhost:3000","http://127.0.0.1:3000"]

# Monitoring Configuration
DEVICE_POLL_INTERVAL=300  # 5 minutes
SSL_CHECK_INTERVAL=3600   # 1 hour
UPTIME_CHECK_INTERVAL=60  # 1 minute
CLEANUP_INTERVAL=86400    # 24 hours

# Data Retention (in days)
DEVICE_DATA_RETENTION=30
SSL_DATA_RETENTION=90
UPTIME_DATA_RETENTION=30
ALERT_DATA_RETENTION=90

# SNMP Configuration
SNMP_TIMEOUT=5
SNMP_RETRIES=3

# SSL Check Configuration
SSL_TIMEOUT=10
SSL_WARNING_DAYS=30

# Uptime Check Configuration
HTTP_TIMEOUT=10
PING_TIMEOUT=5
PORT_TIMEOUT=5
TRACEROUTE_MAX_HOPS=30

# Celery Configuration
CELERY_BROKER_URL=redis://localhost:6379/0
CELERY_RESULT_BACKEND=redis://localhost:6379/0
CELERY_TASK_SERIALIZER=json
CELERY_RESULT_SERIALIZER=json
CELERY_ACCEPT_CONTENT=["json"]
CELERY_TIMEZONE=UTC
CELERY_ENABLE_UTC=True

# Firebase Analytics Configuration
# Path to your Firebase service account JSON file
# GOOGLE_APPLICATION_CREDENTIALS=/path/to/your/firebase-service-account.json
# Your Firebase project ID
# FIREBASE_PROJECT_ID=your-firebase-project-id
# Your Google Analytics 4 property ID (numbers only)
# GA4_PROPERTY_ID=123456789

# Logging Configuration
LOG_LEVEL=INFO
LOG_FORMAT=json