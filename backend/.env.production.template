# Production Environment Configuration
# Copy this file to .env.production and update with your actual values

# Database Configuration
DATABASE_URL=postgresql://nexus_user:CHANGE_THIS_PASSWORD@localhost/nexus_monitoring

# Redis Configuration
REDIS_URL=redis://localhost:6379/0

# Security - CHANGE THESE VALUES!
SECRET_KEY=CHANGE_THIS_TO_A_VERY_SECURE_SECRET_KEY_AT_LEAST_32_CHARACTERS
JWT_SECRET_KEY=CHANGE_THIS_TO_A_DIFFERENT_SECURE_JWT_SECRET_KEY
JWT_ALGORITHM=HS256
JWT_EXPIRE_MINUTES=30

# API Configuration
API_V1_STR=/api/v1
PROJECT_NAME=Nexus Monitoring Portal
PROJECT_VERSION=1.0.0
DEBUG=false

# CORS Settings - Update with your domain
BACKEND_CORS_ORIGINS=["https://yourdomain.com","https://www.yourdomain.com"]

# Server Configuration
HOST=0.0.0.0
PORT=8000
WORKERS=4

# Monitoring Settings
SNMP_TIMEOUT=5
SSL_CHECK_INTERVAL=24
UPTIME_CHECK_INTERVAL=5
DEVICE_POLL_INTERVAL=1
MAX_RETRIES=3
DEFAULT_TIMEOUT=30

# GCP Configuration (Optional)
GOOGLE_APPLICATION_CREDENTIALS=/path/to/your/service-account.json
GCP_PROJECT_ID=your-gcp-project-id
GCP_REGION=us-central1

# Email Configuration (Optional)
SMTP_TLS=true
SMTP_PORT=587
SMTP_HOST=smtp.gmail.com
SMTP_USER=your-email@gmail.com
SMTP_PASSWORD=your-app-password
EMAILS_FROM_EMAIL=noreply@yourdomain.com
EMAILS_FROM_NAME=Nexus Monitoring Portal

# Logging Configuration
LOG_LEVEL=INFO
LOG_FILE=/var/log/nexus/backend.log

# Celery Configuration
CELERY_BROKER_URL=redis://localhost:6379/1
CELERY_RESULT_BACKEND=redis://localhost:6379/2
CELERY_TASK_SERIALIZER=json
CELERY_RESULT_SERIALIZER=json
CELERY_ACCEPT_CONTENT=["json"]
CELERY_TIMEZONE=UTC

# Security Headers
SECURE_SSL_REDIRECT=true
SESSION_COOKIE_SECURE=true
CSRF_COOKIE_SECURE=true
SECURE_BROWSER_XSS_FILTER=true
SECURE_CONTENT_TYPE_NOSNIFF=true

# Rate Limiting
RATE_LIMIT_ENABLED=true
RATE_LIMIT_PER_MINUTE=60

# File Upload
MAX_UPLOAD_SIZE=10485760  # 10MB
UPLOAD_FOLDER=/var/uploads/nexus

# Backup Configuration
BACKUP_ENABLED=true
BACKUP_SCHEDULE=0 2 * * *  # Daily at 2 AM
BACKUP_RETENTION_DAYS=30
BACKUP_PATH=/var/backups/nexus

# Monitoring and Health Checks
HEALTH_CHECK_ENABLED=true
METRICS_ENABLED=true
PERFORMANCE_MONITORING=true

# External Services
EXTERNAL_API_TIMEOUT=30
EXTERNAL_API_RETRIES=3

# Cache Configuration
CACHE_TTL=300  # 5 minutes
CACHE_MAX_SIZE=1000

# Development/Testing (Set to false in production)
TESTING=false
DEVELOPMENT=false